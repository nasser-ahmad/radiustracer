<%= render 'shared/page_title' , :title => "الصفحة الرئيسية" %>


<!-- This page contains: huge jomputron contains three or four buttons for:
	1. Requests index page (which contains search facilities)
	2. ISPs index page.
-->
<div style="background-color: #fff7e6; border: 1px solid black;" class="row well home_jumpo_ip">
	<h3 style=" text-align: center; margin-top: 0px;">أنت متصل من العنوان <span class="text-success text-capitalize"><%= request.remote_ip %></span> 
		<% if !@ip_ranges.empty? %>
			&nbsp; ينتمى للمزود <%= link_to @ip_ranges.first.isp.name , isp_path(@ip_ranges.first.isp) , class: 'btn btn-success' %>
		<% else %>
			&nbsp; هذا العنوان لا ينتمي ﻷي مجال
		<% end %>
	</h3>
</div>


<div class="row">
	<div style="background-color: #fff7e6; border: 1px solid black;" class="col-lg-12 well home_jumpo">
		<%= link_to 'تصفح اختبارات RADIUS' , requests_path , :class => 'btn btn-success home-button' %>
		<%= link_to 'تصفح مزودات الخدمة' , isps_path , :class => 'btn btn-success home-button' %>
	</div>
</div>

<div style="background-color: #fff7e6; border: 1px solid black;" class="row well home_well_search">
	<div class="col-lg-3 pull-right" >
		<%= form_for(@ip_search , :url => search_path , :class => 'general-form', remote:  :true, :validate=>true) do |f| %>
  			<%= f.label(:ip_term, 'بحث عن العنوان الرقمي') %>		
			<%= f.text_field(:ip_term) %>
			<%= f.submit('بحث' , name: nil) %>
		<% end %>
	</div>
	<div class="col-lg-6 col-lg-offset-2 ip_result_div" >
		
	</div>
</div>