<%= render 'shared/page_title' , title: "ISPs" %>

<div class="well">
	<h2>ISPs table | <%= link_to 'Add new isp' , new_isp_path , :class => 'btn btn-success'%></h2>
	<table class="table table-striped table-bordered table_isps_index">
		<thead>
			<tr>
				<th class="table_seq">Seq</th>
				<th>Name</th>
				<th>Ranges</th>
				<th>Options</th>			
			</tr>			
		</thead>
		<tbody>
			<% @isps.each do |isp| %>

			<tr>
				<td class="table_seq">
					<%= isp.id %>
				</td>
				<td>
					<%= isp.name %>
				</td>
				<td>
					<%= isp.ranges %>
				</td>
				<td class="isp_options">
					<%= link_to 'Edit' , edit_isp_path(isp) %> &nbsp;|&nbsp;
					<%= link_to "Delete", isp, method: :delete, data: { confirm: "You sure?" } %>

				</td>
			</tr>
		</tbody>

		<% end %>
	</table>
</div>
