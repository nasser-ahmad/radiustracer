<%= render 'shared/page_title' , :title => 'قائمة المستخدمين' %>
<div class="row">
	
	<div class="col-lg-12">
		<table class="table table-bordered" style="text-align: center;">
			<thead>
				<th>اسم المستخدم</th>
				<th>الخيارات</th>
				<th>تاريخ اخر تعديل</th>
			</thead>
			<tbody>
				<% @users.each do |u| %>
					<tr>
						<td> <%= u.name %> </td>
						<td> <%= u.updated_at %> </td>
						<td> <%= link_to 'تعديل' , edit_user_path(u) %> &nbsp; &nbsp; <%= link_to 'تعطيل' , '#' %> </td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
