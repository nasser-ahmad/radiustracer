<%= render 'shared/page_title' , title: "تسجيل دخول" %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path , html: {class:  'general-form'}) do |f| %>

      <%= f.label :name, 'اسم المستخدم' %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :password , 'كلمة المرور'%>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "تسجيل الدخول", class: "btn btn-primary" %>
    <% end %>

    <p>مستخدم جديد؟ <%= link_to "إنشاء حساب؟", new_user_path %></p>
  </div>
</div>