<%= render 'shared/page_title' , title: "العمليات" %>


<div class="row">
	<div class="col-lg-12 well" style="direction: rtl;"> 
		<h3 style="text-align: center;">بحث ضمن جدول العمليات </h3>
		<div class="col-lg-6 col-lg-offset-1 col-sm-6">
			<%= form_tag(req_search_path , :method => 'get' , :remote => :true) do %>
				<%= text_field_tag(:from_date, '',class: 'datepicker date') %>
		  		<%= submit_tag 'بحث' , name: nil %>
			<% end %>
            
	        <script type="text/javascript">
	            $(function () {
	                $('.datepicker').datetimepicker({
	                });
	            });
	        </script>
    	</div>
		<div class="col-lg-4" style="direction: rtl;">
			<%= form_tag(req_search_path , :method => 'get', :remote => :true) do %>
				<%= label_tag(:isp_id, "اسم المزود") %>
		  		<%= select_tag :isp_id,  options_for_select(@isps.collect{ |u| [u.name , u.id]})  %>
		  		<%= submit_tag 'بحث' , name: nil %>
			<% end %>
		</div>
	</div>
</div>

<div class="row"">	
	<div class="col-lg-12 well" style="direction: rtl;text-align: center;">
		<h2>جدول العمليات | <%= link_to 'إضافة عملية جديدة' , new_request_path , :class => 'btn btn-success'%></h2>
		<table class="table  table-bordered table-striped ">
			<thead>
			  <tr>
			    <th>المزود</th>
			    <th>العنوان العام</th>
			    <th>عنوان الموجه</th>
			    <th>العنوان الخاص</th>
			    <th>تاريخ الاسناد</th>
			    <th>تاريخ التحرير</th>
			    <th>آخر تحديث</th>
			  </tr>
			</thead>
			<tbody id="requests_table">
				    
			</tbody>
		</table> 		             
		  
	</div>
</div>

<hr/>